{
  "manifest_version": 2,

  "name": "Epiphany",
  "description": "Share if you care",
  "version": "1.1",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "htm/popup.html"
  },

  "chrome_url_overrides" : {
    "newtab": "htm/newtab.html"
  },

  "permissions": [
    "activeTab",
    "storage",
    "http://epip.nl/"
  ],

  "icons": {
    "16": "img/icon.png",
    "48": "img/body.png",
    "128": "img/body.png"
  }
}
